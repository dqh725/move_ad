  <div class="container"> 

    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"> 
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                   
        <div class="panel panel-info" >
          <div class="panel-heading">
            <div class="panel-title">Sign In</div>
            <div style="float:right; font-size: 80%; position: relative; top:-10px">
            <%= link_to "Forgot your password?", new_user_password_path,style: "float:right; font-size: 80%; position: relative; top:-10px"%>
            </div>
          </div>     

          <div style="padding-top:30px" class="panel-body" >

            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
              
            <form id="loginform" class="form-horizontal" role="form">
                  
              <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>              
                    <%= f.email_field :email, autofocus: true, id: "login-username", class: "form-control", placeholder: "email address"%>
                    
              </div>
                
              <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.password_field :password, autocomplete: "off", id: "login-password", class: "form-control", placeholder: "password"%>

              </div>
                  

                
              <div class="input-group">
                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me, id: "login-remember"%>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>
              </div>


              <div style="margin-top:10px" class="form-group">
                <!-- Button -->

                <div class="col-sm-12 controls">
                  <!-- <a id="btn-login" href="#" class="btn btn-success">Login  </a> -->
                  <%= f.submit "Log in", class: "btn btn-success", id: "btn-login"%>

                  <%= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook), id: "btn-fblogin", class: "btn btn-primary" %>

                </div>
              </div>


              <div class="form-group">
                <div class="col-md-12 control">
                  <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                    Don't have an account! 
                  	<%=link_to "Sign Up Here",new_user_registration_path%>
                    
                  </div>
                </div>
              </div>    
            </form>     



          </div>                     
        </div>  
      <%end%>
    </div>
  </div>


